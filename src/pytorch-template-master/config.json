{
    "name": "MITIndoorRotationCorrection",
    "n_gpu": 1,

    "arch": {
        "type": "RotNetModel",
        "args": {}
    },
    "data_loader": {
        "type": "MITIndoorDataLoader",
        "args":{
            "data_dir": "data/MITIndoor",
            "batch_size": 48,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.1,
            "weight_decay": 5e-4,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
